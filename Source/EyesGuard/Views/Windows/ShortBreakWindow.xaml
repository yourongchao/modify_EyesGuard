<Window
    x:Class="EyesGuard.Views.Windows.ShortBreakWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:EyesGuard.Views.Windows"
    xmlns:lang="clr-namespace:EyesGuard.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Short Break"
    x:Name="this"
    FlowDirection="{lang:LocalizedFlowDirection}"
    Width="800"
    Height="200"
    AllowsTransparency="True"
    Background="#E5000000"
    Closing="Window_Closing"
    FontFamily="{StaticResource HastiUI.Fonts.AppFont}"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d"
    MouseRightButtonUp="ShortBreakWindow_OnMouseRightButtonUp">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#FF1A9F55" />
        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <fa:ImageAwesome
                Height="80"
                Margin="20,0"
                Foreground="#FF1A9F55"
                Icon="Shield" />
            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                FontSize="20"
                Foreground="#FF1A9F55"
                Text="{Binding TimeRemaining}" />
        </StackPanel>

        <TextBlock
            Grid.Column="2"
            Margin="14,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="30"
            Foreground="#FF1A9F55"
            Text="{Binding ShortMessage}"
            TextWrapping="Wrap" />

        <Grid Grid.Column="3" Width="140">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Close Button  -->
            <Button
                x:Name="CloseButton"
                Grid.Row="0"
                Width="24"
                Height="24"
                Margin="0,5,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderThickness="0"
                Click="CloseButton_Click"
                ToolTip="关闭">
                <fa:ImageAwesome
                    Height="16"
                    Foreground="#FF1A9F55"
                    Icon="Close" />
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--  Delay Button  -->
            <Button
                x:Name="DelayButton"
                Grid.Row="1"
                Height="32"
                Margin="0,0,10,10"
                Padding="15,5,15,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="#201A9F55"
                BorderBrush="#FF1A9F55"
                BorderThickness="1"
                Click="DelayButton_Click"
                Content="延迟5分钟"
                Cursor="Hand"
                FontSize="14"
                Foreground="#FF1A9F55">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF1A9F55" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CC1A9F55" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
